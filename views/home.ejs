<head>
	<title>Event Registration</title>
	<style>
		body {
			font-family: Arial, sans-serif;
			margin: 0;
			padding: 0;
			background-color: #f1f1f1;
		}
		form {
			background-color: #fff;
			max-width: 600px;
			margin: 50px auto;
			padding: 20px;
			border-radius: 5px;
			box-shadow: 0 0 10px rgba(0,0,0,0.2);
		}
		input[type=text], input[type=number], input[type=email] {
			width: 100%;
			padding: 12px 20px;
			margin: 8px 0;
			box-sizing: border-box;
			border: 2px solid #ccc;
			border-radius: 4px;
			background-color: #f8f8f8;
			resize: none;
		}
		input[type=submit] {
			background-color: #4CAF50;
			color: white;
			padding: 12px 20px;
			border: none;
			border-radius: 4px;
			cursor: pointer;
			float: right;
		}
		input[type=submit]:hover {
			background-color: #45a049;
		}
	</style>
</head>
<body>
	<form action="/update" method="post" id="event-registration-form">
		<!-- <label for="name">Name:</label>
		<input type="text" id="name" name="name" required> -->

		<label for="domain">Domain ID (Enter ID):</label>
		<input type="number" id="domain" name="domain" required>

		<label for="event">Event:</label>
		<input type="text" id="event" name="event" required>

		<label for="event-description">Event Description:</label>
		<textarea id="event-description" name="eventDescription" rows="5" required></textarea>
        <br>
		<label for="registration-cost">Registration Cost:</label>
		<input type="number" id="registration-cost" name="registrationCost" required>

		<label for="team-size">Team Size:</label>
		<input type="number" id="team-size" name="teamSize" required>

		<label for="pdf-download-link">PDF Download Link:</label>
		<input type="text" id="pdf-download-link" name="pdfDownloadLink" required>

		<label for="image-link">Image Link:</label>
		<input type="text" id="image-link" name="imageLink" required>

		<input type="submit" value="Update Details">
	</form>

